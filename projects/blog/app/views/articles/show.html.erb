<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @article.content %>
</p>

<p>
  <strong>Date:</strong>
  <%= @article.date %>
</p>

<% @article.comments.each do |comment| %>
  <p>
    <strong>Comment: </strong>
    <%= comment.content %>
  </p>
<% end %>

<h2>Add a comment</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  </p>
<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>

